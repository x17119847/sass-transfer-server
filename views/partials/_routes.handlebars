<div class="container-fluid">
  <h1>Destinations</h1>
  {{#if routes}}
  {{else}}
  <div class="">
    <i class="fa fa-info-circle"></i> You have not yet set up any Destinations.
  </div>
  {{/if}}

  <a class="btn btn-success mt-3 mb-3" href="/routes/add">Add Destination</a>

  <div class="line"></div>

  {{#if routes}}
  <div class="bg-dark-transparent p-4">
    <table class="display datatable hover stripe">
      <thead>
        <tr>
          <th scope="col">Destination Name</th>
          <th scope="col">Destination Place</th>
          <th scope="col">Service Name</th>
          <th scope="col">Base Name</th>
          <th scope="col">Base Place</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each routes}}
        <tr>
          <td>{{name}}</td>
          <td>{{place.countyName}}</td>
          <td>{{service.name}}</td>
          <td>{{service.base.name}}</td>
          <td>{{service.base.place.countyName}}</td>
          <td>
            <div class="float-right">
              <a class="btn btn-success btn-sm mr-1" href="/routes/prices/{{id}}"><i class="fas fa-hand-holding-usd"></i>
                Prices</a>
              <a class="btn btn-warning btn-sm mr-1" href="/routes/edit/{{id}}"><i class="fas fa-pencil-alt"></i> Edit</a>
              <a class="btn btn-danger btn-sm mr-1" href="/routes/delete/{{id}}"><i class="fas fa-trash-alt"></i>
                Delete</a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{/if}}

</div>