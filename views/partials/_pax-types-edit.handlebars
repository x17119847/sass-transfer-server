<div class="bg-dark-transparent p-4">
  <h1>Edit Age Group</h1>  

  <form class="form-inline" method="POST" action="/pax-types/edit/{{paxType.id}}">
    
    <!-- Age From -->
    <label class="my-1 mr-2" for="age_from">Age From </label>
    <select class="custom-select my-1 mr-sm-2" id="age_from" name="age_from">
      {{#times 99}}
      <option value="{{this}}" {{isSelected this ../paxType.age_from}}>{{this}}</option>
      {{/times}}
    </select>

    <!-- Age To -->
    <label class="my-1 mr-2" for="age_to">Age To</label>
    <select class="custom-select my-1 mr-sm-2" id="age_to" name="age_to">
      {{#times 99}}
      <option value="{{this}}" {{isSelected this ../paxType.age_to}}>{{this}}</option>
      {{/times}}
    </select>

    <!-- Age Group Name -->
    <label class="my-1 mr-2" for="name">Name of Age Group</label>
    <input type="text" name="name" id="name" value="{{paxType.name}}" class="form-control" placeholder="Name of Age Group">
    
    <button type="submit" class="btn btn-primary my-1 ml-2">Submit</button>
  </form>

</div>