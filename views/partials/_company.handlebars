
<div class="row">
  <div class="col-lg-12">

    {{#if company.name}}
      <h1>{{company.name}}</h1>
      <button class="btn btn-warning" id="editCompanyNameButton"><i class="fas fa-pencil-alt"></i> Edit Company Name</button> 
    {{else}}     
      <div class="alert alert-danger">
        Please insert your Company name.
      </div>
    {{/if}}
    
    <div id="editCompany" style="display:{{#if company.name}}none{{else}}block{{/if}}" class="mt-3">
      <form action="/company" method="POST">            
        <input type="text" name="name" id="name" class="form-control" value="{{company.name}}" placeholder="Insert Company Name">
        <button type="submit" class="btn btn-success mt-3">Submit</button>
        <button class="btn btn-dark mt-3" type="button" style="display:none" id="cancelEditCompanyNameButton">Cancel</button>
      </form>
    </div>

  </div>
</div>

