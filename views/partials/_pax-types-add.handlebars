<div class="bg-dark-transparent p-4">
  <h1>Add Age Group</h1>
  <p><i class="fas fa-info-circle"></i> Example of Age Grouop: "Adults: 18 to 99, Children: 3 to 17, Infants: 0 to 2.</p>

  <form class="form-inline" method="POST" action="/pax-types">
    <!-- Age From -->
    <label class="my-1 mr-2" for="age_from">Age From </label>
    <select class="custom-select my-1 mr-sm-2" id="age_from" name="age_from">      
      {{#select age_from}}
      {{#times 99}}
      <option value="{{this}}">{{this}}</option>
      {{/times}}
      {{/select}}
    </select>

    <!-- Age To -->
    <label class="my-1 mr-2" for="paxType">Age To </label>
    <select class="custom-select my-1 mr-sm-2" id="age_to" name="age_to">      
      {{#select age_to}}
      {{#times 99}}
      <option value="{{this}}">{{this}}</option>
      {{/times}}
      {{/select}}
    </select>

    <!-- Age Group Name -->
    <label class="my-1 mr-2" for="name">Name of Age Group</label>
    <input type="text" name="name" id="name" placeholder="Name of Age Group" value="{{name}}">

    <button type="submit" class="btn btn-primary my-1 ml-2">Submit</button>
  </form>

</div>