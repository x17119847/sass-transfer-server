<div class="bg-dark-transparent p-4">
  <h1>Edit Base</h1>

  <form class="form" method="POST" action="/bases/edit/{{base.id}}">

    <!-- Base Name -->
    <div class="form-group">
      <label class="my-1 mr-2" for="name">Base Name</label>
      <input type="text" name="name" id="name" class="form-control" placeholder="Base Name" value="{{base.name}}">
    </div>

    <!-- Google Place Search -->

    <button type="submit" class="btn btn-primary my-1 ml-2">Submit</button>
  </form>

</div>